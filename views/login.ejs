<!DOCTYPE html>
<html lang="en">

<head>
    <%- include("partials/head.ejs") %>
        <title>Log In â€¢ Picky Eaters</title>
</head>

<body>

    <h1 class="p-5 text-center text-primary">Picky Eaters</h1>
    <hr class="text-primary">
    <main class="d-flex justify-content-center align-items-center flex-grow-1">
        <div id="loginCard" class="container card redShadow p-4 w-40">
            <h2>Log In</h2>
            <form method="POST" action="/login">
                <div class="mb-3">
                    <label class="form-label">Username <span class="bi bi-person loginIcon"></span>
                        <input autocomplete="username" name="username" type="text" class="form-control" id="usernameInput">
                        
                    </label>
                </div>
                <div class="mb-3">
                    <label class="form-label">Password <span class="bi bi-eye loginIcon" id="eyeIcon"></span>
                        <input autocomplete="current-password" name="password" type="password" class="form-control" id="passwordInput">
                    </label>
                </div>
                <button type="submit" class="btn btn-dark">Submit</button>
                <% if (typeof loginError != 'undefined') { %>
                    <h3 class="text-danger"><%= loginError %></h3>
                <%}%>
            </form>
        </div>
    </main>
    <%- include("partials/footer.ejs") %>
</body>
</html>